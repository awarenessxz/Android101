<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fab_menu"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:visibility="visible"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/fab_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:animateLayoutChanges="true"
            android:background="@android:color/background_dark"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="70dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:gravity="center_horizontal" >

                <LinearLayout
                    android:id="@+id/ll_layer_addNewfab4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_gravity="end|right"
                    android:orientation="horizontal"
                    android:paddingRight="8dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:gravity="center"
                    android:alpha="0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@android:color/white"
                        android:text="FAB MENU 4"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_addNew4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus"
                        android:tint="@android:color/white"
                        app:backgroundTint="@color/colorPrimary"
                        app:fabSize="mini"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_layer_addNewfab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_gravity="end|right"
                    android:orientation="horizontal"
                    android:paddingRight="8dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:gravity="center"
                    android:alpha="0">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@android:color/white"
                        android:text="FAB MENU 3"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_addNew3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus"
                        android:tint="@android:color/white"
                        app:backgroundTint="@color/colorPrimary"
                        app:fabSize="mini"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_layer_addNewfab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_gravity="right|end"
                    android:orientation="horizontal"
                    android:paddingRight="8dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:gravity="center"
                    android:alpha="0" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@android:color/white"
                        android:text="FAB MENU 2"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_addNew2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus"
                        android:tint="@android:color/white"
                        app:backgroundTint="@color/colorPrimary"
                        app:fabSize="mini"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_layer_addNewfab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_gravity="right|end"
                    android:orientation="horizontal"
                    android:paddingRight="8dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="0dp"
                    android:paddingStart="0dp"
                    android:gravity="center"
                    android:alpha="0" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_marginRight="20dp"
                        android:padding="5dp"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@android:color/white"
                        android:text="FAB MENU 1"/>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_addNew1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/plus"
                        android:tint="@android:color/white"
                        app:backgroundTint="@color/colorPrimary"
                        app:fabSize="mini"
                        app:elevation="6dp"
                        app:pressedTranslationZ="12dp" />

                </LinearLayout>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_mainbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_gravity="end|right"
                    android:src="@drawable/plus"
                    android:tint="@android:color/white"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:fabSize="normal"
                    app:elevation="6dp"
                    app:pressedTranslationZ="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>